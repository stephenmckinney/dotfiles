[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>
[alias]
	co = checkout
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	excludesfile = <%= ENV['HOME'] %>/.gitignore
	editor = mate -w
[apply]
	whitespace = nowarn
[log]
 	date = short
[format]
<%# <hash> <committer name> <committer date relative> <subject> %>
  pretty = %C(yellow)%h [%cn] %C(cyan)%cr %Creset%s
