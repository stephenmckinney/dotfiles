. ~/.zsh/aliases

# changing directory to dev projects
function d { cd ~/Documents/Dev/$1; }

# changing directory to work projects
function w { cd ~/Documents/Dev/web/threespot/$1; }

# alternative to "rails" command to use templates
function railsapp {
  template=$1
  appname=$2
  shift 2
  rails $appname -m http://github.com/ryanb/rails-templates/raw/master/$template.rb $@
}

# misc
alias reload='. ~/.bash_profile'
