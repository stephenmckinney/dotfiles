# Prettiness
magenta='\[\e[0;35m\]' 
no_color='\[\e[0m\]'
if [ "${HOST}"=="smckinney.local" ]; then
  export PS1="${magenta}[\w]\$${no_color} "
else
  export PS1="${magenta}\h[\w]\$${no_color} "
fi

export LSCOLORS='fxfxcxdxbxegedabagacad'
#   1.   directory = magneta
#   2.   symbolic link = magneta
#   3.   socket = green
#   4.   pipe = brown
#   5.   executable = red
#   6.   block special = blue cyan
#   7.   character special = blue brown
#   8.   executable with setuid bit set = black red
#   9.   executable with setgid bit set = black cyan
#   10.  directory writable to others, with sticky bit = black green
#   11.  directory writable to others, without sticky bit = black brown

# Dev environment setup
export DISPLAY=:0.0
export EDITOR='mate -w' #use Textmate
export SVN_EDITOR='mate -w' #use Textmate
export GIT_EDITOR='mate -w' #use Textmate
export LC_CTYPE=en_US.UTF-8 # Subversion

# Bash History
export HISTCONTROL=erasedups
export HISTSIZE=10000
shopt -s histappend
