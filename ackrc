# use color, even if piping to a another program
--color
# sort files
--sort-files
# only search with case sensitivity if there is mixed case
--smart-case
# follow symlinks
--follow
# stop reading a file after NUM matches.
--max-count=100
# custom filetypes
--type-set=coffee:ext:coffee
--type-set=cucumber:ext:feature
--type-set=md:ext:markdown,md,mkd,mdown
--type-set=erb:ext:erb
--type-set=less:ext:less
--type-set=log:ext:log
--type-set=rb:ext:rb,rake
--type-set=scss:ext:scss,sass
--type-add=css:ext:scss,sass
# ignores
--nolog
--nosql
--noxml
--noyaml
# ignores - Rails
--ignore-dir=.bundle
--ignore-dir=db/migrate
--ignore-dir=log
--ignore-dir=public/cache
--ignore-dir=public/stylesheets
--ignore-dir=public/system
--ignore-dir=tmp
--ignore-dir=vendor
