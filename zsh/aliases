# cd
alias ..='cd ..'

# ls
#-l long
#-h human readable size
#-G colorized output
#-a all
alias ls="ls -FlhG"
alias la="ls -FlhGa"

# Subversion
alias sup='svn update'
alias sstat='svn status'
alias scomm='svn commit'
alias sdiff='svn diff | mate'
alias slog='svn log -v | mate'
alias sexp='svn export'

# Git
alias gpull='git pull'
alias gpush='git push'
alias gstat='git status'
alias gcomm='git commit -v'
alias gcomma='git commit -v -a'
alias gbranch='git branch'
alias gbrancha='git branch -a'
alias gdiff='git diff | mate'
alias glog='git log -v | mate'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"

# Rails
alias sc='script/console'
alias ss='script/server'
alias sg='script/generate'
alias a='autotest -rails'
alias tlog='tail -f log/development.log'
alias scaffold='script/generate nifty_scaffold'
alias migrate='rake db:migrate db:test:clone'
alias rst='touch tmp/restart.txt'

# Textmate
alias et='mate . &'
alias etr='mate app config lib lib_common db features public spec test &'
alias etv='mate app config lib lib_common db features public spec test vendor &'

# Apache
# alias apachectl='sudo /opt/local/apache2/bin/apachectl'

# Python
alias python='python2.6'

# Python Simple HTTP Server
alias pythonsimplehttpserver='python -m SimpleHTTPServer'

# MySQL
alias mysqlstart='/usr/local/Cellar/mysql/5.1.48/bin/mysqld_safe &'
alias mysqlstop='/usr/local/Cellar/mysql/5.1.48/bin/mysqladmin -u root -p shutdown'

# Memcached
alias memcachedstart='memcached -p 11211 &'

# commands starting with % for pasting from web
alias %=' '

# General
alias vi='vim' #use vim
alias tc='top -o cpu' #cpu
alias tm='top -o vsize' #memory
alias flarge='find . -size +100000000c -print' #print all file over 100 MB
alias ffile='du -h'
alias fdir='du -sk' #file size of directory
alias history='history | grep'
alias sbash='source ~/.bash_profile'
alias ebash='mate ~/.dotfiles &'